<?xml version="1.0" encoding="utf-8"?>
<!-- Contenedor principal de tipo LinearLayout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rsz_1fondoxml"
    android:orientation="vertical"
    android:alpha="0.8"
    tools:context=".ConsultaFutbolistas">


    <!-- TextView para el título de la actividad -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONSULTA FUTBOLISTAS"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:background="@color/colorSuperior"
        />
    <!-- Espacio entre el título y el contenido -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <!-- Contenedor LinearLayout para el contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="0dp"
        android:paddingRight="24dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <!-- ImageView para mostrar una imagen -->
        <ImageView
            android:layout_width="110dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:src="@drawable/futymanager" />

        <!-- ListView para mostrar la lista de futbolistas -->
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"/>

        <!-- LinearLayout para contener los botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Botón para regresar -->
            <Button
                android:id="@+id/btnRegresar"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="135dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/colorBoton"
                android:text="REGRESAR"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
